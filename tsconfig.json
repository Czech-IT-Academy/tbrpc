{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ES2020"],
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": false,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,

    /* Build */
    "declaration": true,
    "declarationDir": "./dist/esm",
    "sourceMap": true,
    "rootDir": ".",

    "strict": true,
  },
  "include": ["./packages/*/src/**/*"]
}
