{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,

    /* Build */
    "declaration": true,
    "declarationDir": "./dist/esm",
    "sourceMap": true,
    "rootDir": "./src",

    "strict": true,
  },
  "include": ["src"]
}
